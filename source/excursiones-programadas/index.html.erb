layout: products
title: Excursiones Programadas
---
<% content_for(:itemcount) do %>
  <%= dato.excursiones_programadas.count %>
<% end %>

<% content_for(:sidebar) do %>
  <%= partial "partials/sidebar", :locals => { categoria: 'excursiones_programadas', collection: dato.excursiones_programadas } %>
<% end %>

<% dato.excursiones_programadas.each do |excursion| %>
  <%
  descripcion = ""
  link = "/excursiones-programadas/#{excursion.slug}.html"
  extraclasses = ""
  %>

  <%= partial "partials/producto", :locals => { titulo: excursion.titulo, descripcion: descripcion, link: link, thumbnail: excursion.imagen, extraclasses: extraclasses} %>
<% end %>
