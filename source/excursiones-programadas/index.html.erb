---
layout: layout
---
<div class="inner-banner style-6 background-block" style="background-image: url(img/gallery/bg_3.jpg);">
	<img class="center-image" src="/images/inner_banner_1.jpg" alt="" style="display: none;">
	<div class="vertical-align">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-md-8 col-md-offset-2">
		  			<ul class="banner-breadcrumb color-white clearfix">
		  				<li><a class="link-blue-2" href="/">Inicio</a> /</li>
		  				<li><span>Excursiones</span></li>
		  			</ul>
		  			<h2 class="color-white">Excursiones Progamadas</h2>
  				</div>
			</div>
		</div>
	</div>
</div>

<div class="list-wrapper bg-grey-2">
	<div class="container">
		<div class="row">

			<div class="col-xs-12">

				<div class="grid-content clearfix">
					<% dato.excursiones_programadas.each do |paquete| %>

						<div class="list-item-entry">
			        <div class="hotel-item style-3 bg-white">
			        	<div class="table-view">
			          	<div class="radius-top cell-view">
			          	<% unless paquete.imagen.nil? %>
			          	 	<%= image_tag paquete.imagen.file.width(360).height(170).fit('crop').crop('top').to_url %>
			          	<% end %>
			          	</div>
			          	<div class="title hotel-middle clearfix cell-view">
			          	    <h4><b><%= paquete.titulo %></b></h4>
				            </div>
			            <div class="title hotel-right clearfix cell-view">
		            		<br/>
										<a class="c-button b-40 bg-blue hv-blue-o grid-hidden" href="/circuitos/<%= paquete.slug %>.html" style="display:block;">MÃ¡s detalles</a>
			            </div>
		            </div>
			        </div>
		        </div>

	        <% end %>
				</div>

			</div>
		</div>
	</div>
</div>
