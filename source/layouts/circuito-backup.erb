<% wrap_layout :layout do %>
<% @cover_image = "/images/destinos/#{current_page.data.destino}/cover.jpg" %>
  <article>
    <div class="inner-banner style-6 background-block" style="background-image: url(<%= @cover_image %>);">
    	<img class="center-image" src="<%= @cover_image %>" alt="" style="display: none;">
    	<div class="vertical-align">
    		<div class="container">
    			<div class="row">
    				<div class="col-xs-12 col-md-8 col-md-offset-2">
    		  			<ul class="banner-breadcrumb color-white clearfix">
    		  				<li><a class="link-blue-2" href="/">Inicio</a> /</li>
    		  				<li><a class="link-blue-2" href="/paquetes">paquetes</a> /</li>
    		  				<li><span><%= current_page.data.title %></span></li>
    		  			</ul>
    		  			<h2 class="color-white"><%= current_page.data.title %></h2>
      				</div>
    			</div>
    		</div>
    	</div>
    </div>

    <div class="detail-wrapper">
    	<div class="container">
    		<div class="detail-header">
    			<div class="row">
    				<div class="col-xs-12 col-sm-8">
    					<div class="detail-category color-grey-3">Paquete turístico</div>
    					<h2 class="detail-title color-dark-2"><%= current_page.data.title %></h2>
    		    </div>
    		    <div class="col-xs-12 col-sm-4">
    		    	<div class="detail-price color-dark-2">Precios desde <span class="color-dr-blue"> $<%= current_page.data.precio %></span> /persona</div>
    		    </div>
         	</div>
       	</div>

       	<div class="row padd-90">
       		<div class="col-xs-12 col-md-8">
       			<div class="detail-content color-1">
       				<div class="detail-top slider-wth-thumbs style-2">
       					<img src="/images/destinos/<%= current_page.data.destino %>/main.jpg" />
    					</div>

        			<div class="detail-content-block">
        				<%= yield %>

                <div class="precios bg-grey-2">
                  <div class="second-title">
          					<h2>Tarifas</h2>
          				</div>
                  <table class="table table-striped">
                    <tbody>
                      <tr>
                        <th>Hotel</th>
                        <th>Sencilla</th>
                        <th>Doble</th>
                        <th>Triple</th>
                        <th>Niños</th>
                      </tr>
                      <% current_page.data.precios.each do |hotel| %>
                        <tr>
                          <td><%= hotel.hotel %></td>
                          <td>$<%= hotel.sgl %></td>
                          <td>$<%= hotel.dbl %></td>
                          <td>$<%= hotel.tpl %></td>
                          <td>$<%= hotel.chd %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <div class="text-center precios-alert">PRECIO POR PERSONA EN DOLARES USD</div>
                </div>

                <%= partial "partials/condiciones" %>

        			</div>

              <%# partial "partials/faq" %>

    		    </div>
       		</div>
       		<div class="col-xs-12 col-md-4">
       			<div class="right-sidebar">
       				<div class="detail-block bg-dr-blue">
       					<h4 class="color-white">¿Qué Incluye?</h4>
                <hr/>
    				<div class="details-desc">
    					<ul>
    						<% current_page.data.incluye.each do |item| %>
    							<li><span class="color-white"><i class="<%= item.icono %>" aria-hidden="true"></i><br/><%= item.rubro %></span></li>
    						<% end %>
    					</ul>
    				</div>
       		</div>

    			<div class="help-contact bg-grey-2">
    				<h4 class="color-dark-2">¿Tiene consultas?</h4>
    				<p class="color-grey">Escríbanos por medio de nuetro formulario y le atenderemos lo antes posible</p>
    				<a class="help-phone color-dark-2 link-dr-blue" href="tel:<% data.contacto.telefono %>"><% data.contacto.telefono %></a>
    				<a class="btn btn-primary" href="/contacto.html">Escríbanos</a>
    			</div>
       			</div>
       		</div>
       	</div>
    	</div>
    </div>
  </article>
<% end %>
