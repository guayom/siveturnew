<% wrap_layout :layout do %>
  <div class="inner-banner background-block" style="background-image: url(/images/inner_banner_1.jpg);">
  	<img class="center-image" src="/images/inner_banner_1.jpg" alt="" style="display: none;">
  	<div class="vertical-align">
  		<div class="container">
  			<ul class="banner-breadcrumb color-white clearfix">
  				<li><a class="link-blue-2" href="/">Inicio</a> /</li>
  				<li><span class="color-blue-2"><%= current_page.data.title.downcase %></span></li>
  			</ul>
  			<h2 class="color-white"><%= current_page.data.title %></h2>
  			<% cantidad_paquetes = dato.paquetes.count %>
  			<h4 class="color-white">Actualmente contamos con: <span><%= yield_content(:itemcount) %></span> <%= current_page.data.title.downcase %></h4>
  		</div>
  	</div>
  </div>

  <div class="list-wrapper bg-grey-2">
  	<div class="container">
  		<div class="row">
        <%= yield_content(:sidebar) %>
  			<div class="col-xs-12 col-sm-8 col-md-9">
  				<div class="grid-content clearfix filter-content">
            <div class="grid-sizer col-mob-12 col-xs-6 col-sm-4 no-padding"></div>
  					<%= yield %>
  				</div>
  			</div>
  		</div>
  	</div>
  </div>
<% end %>
