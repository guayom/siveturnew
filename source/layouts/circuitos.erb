<% wrap_layout :layout do %>
<div class="inner-banner background-block" style="background-image: url(/images/inner_banner_1.jpg);">
	<img class="center-image" src="/images/inner_banner_1.jpg" alt="" style="display: none;">
	<div class="vertical-align">
		<div class="container">
			<ul class="banner-breadcrumb color-white clearfix">
				<li><a class="link-blue-2" href="#">Inicio</a> /</li>
				<li><span class="color-blue-2">Circuitos</span></li>
			</ul>
			<h2 class="color-white">Nuestros circuitos</h2>
			<% cantidad_circuitos = dato.circuitos.count %>
			<h4 class="color-white">Actualmente contamos con: <span><%= cantidad_circuitos %></span> paquete<% if cantidad_circuitos > 1 %>s<% end %></h4>
		</div>
	</div>
</div>

<div class="list-wrapper bg-grey-2">
	<div class="container">
		<div class="row">
			<%= partial "partials/sidebar" %>
			<div class="col-xs-12 col-sm-8 col-md-9">

				<div class="grid-content clearfix">
					<% dato.circuitos.each do |paquete| %>

						<div class="list-item-entry">
			        <div class="hotel-item style-3 bg-white">
			        	<div class="table-view">
			          	<div class="radius-top cell-view">
			          	<% unless paquete.thumbnail.nil? %>
			          	 	<%= image_tag paquete.thumbnail.path %>
			          	<% end %>
			          	</div>
			          	<div class="title hotel-middle clearfix cell-view">
			          	 	<div class="date grid-hidden"><strong>19.07 - 26.07 / 7</strong> night</div>
			          	    <h4><b><%= paquete.titulo %></b></h4>
					            <!--<p class="f-14 grid-hidden"><%= truncate_words(paquete.descripcion, :length => 20) %></p>-->
				            </div>
			            <div class="title hotel-right clearfix cell-view">
                    <!--Eliminé el precio -->
		            		<br/>
										<a class="c-button b-40 bg-blue hv-blue-o grid-hidden" href="/circuitos/<%= paquete.slug %>.html" style="display:block;">Más detalles</a>
			            </div>
		            </div>
			        </div>
		        </div>

	        <% end %>
				</div>

			</div>
		</div>
	</div>
</div>

    <%= yield %>

<% end %>
