---
title: Contacto
---
<div class="inner-banner style-6 background-block" style="background-image: url(/images/bg_3.jpg);">
	<img class="center-image" src="/images/bg_3.jpg" alt="" style="display: none;">
	<div class="vertical-align">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-md-8 col-md-offset-2">
		  			<ul class="banner-breadcrumb color-white clearfix">
		  				<li><a class="link-blue-2" href="#">Inicio</a> /</li>
		  				<li><span>Contacto</span></li>
		  			</ul>
		  			<h2 class="color-white">Contáctenos</h2>
  				</div>
			</div>
		</div>
	</div>
</div>


<div class="detail-wrapper">
<!-- CONTACT-FORM -->
<div class="main-wraper padd-40">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-8">
				<form class="contact-form js-contact-form" action="https://formspree.io/aviancatours@siveturcr.com" method="POST">
					<div class="row">
						<div class="col-xs-12 col-sm-6">
							<div class="input-style-1 type-2 color-2">
							  	<input type="text" name="nombre" required="" placeholder="Nombre completo">
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="input-style-1 type-2 color-2">
							  	<input type="email" name="_replyto" required="" placeholder="Correo electrónico">
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="input-style-1 type-2 color-2">
							  	<input type="text" name="asunto" required="" placeholder="Asunto">
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="drop-wrap drop-wrap-s-3 color-2">
							  	<div class="drop">
								 	<b>Departmento</b>
									<a href="#" class="drop-list"><i class="fa fa-angle-down"></i></a>
									<span>
									  <a href="#">Ejemplo 1</a>
										<a href="#">Ejemplo 2</a>
									</span>
							   	</div>
							</div>
						</div>
            <input type="hidden" name="_next" value="/gracias.html" />
            <input type="hidden" name="_subject" value="Contacto desde el sitio web!" />
            <input type="text" name="_gotcha" style="display:none" />
						<div class="col-xs-12">
							<textarea class="area-style-1 color-1" name="fields[text]" required="" placeholder="Su mensaje"></textarea>
							<button type="submit" class="c-button bg-dr-blue-2 hv-dr-blue-2-o"><span>Enviar mensaje</span></button>
						</div>
					</div>
				</form>
				<div class="ajax-result">
                  <div class="success"></div>
                  <div class="error"></div>
                </div>
                <div class="ajax-loader"></div>
			</div>
			<div class="col-xs-12 col-sm-4">
				<div class="contact-about">
					<h4 class="color-dark-2"><strong>Información de contacto</strong></h4>
					<p class="color-grey-3"><%= dato.config.contacto_text %></p>
				</div>
				<div class="contact-info">
					<h4 class="color-dark-2"><strong>contact info</strong></h4>
					<div class="contact-line color-grey-3">
            <i class="fa fa-phone"></i> Teléfono:
            <a class="color-dark-2" href="tel:<%= data.contacto.telefono %>">
              <%= dato.config.telefono %>
            </a>
          </div>
					<div class="contact-line color-grey-3"><i class="fa fa-envelope"></i> Email: <a class="color-dark-2 tt" href="#"><%= dato.config.email %></a></div>
					<div class="contact-line color-grey-3"><i class="fa fa-map-marker"></i> Dirección: <span class="color-dark-2 tt"><%= dato.config.direccion %></span></div>
				</div>
				<div class="contact-socail">
					<% data.contacto.social.each do |f| %>
				  	<a href="<%= f.url %>"><span class="fa fa-<%= f.title %>"></span></a>
				  <% end %>
				</div>
			</div>
		</div>
	</div>
</div>

</div>
