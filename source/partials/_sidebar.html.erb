<div class="col-xs-12 col-sm-4 col-md-3">
  <div class="sidebar bg-white clearfix">
    <div class="sidebar-block">
      <form action="/search.html" method='GET'>
        <h4 class="sidebar-title color-dark-2">Buscar</h4>
        <div class="search-inputs">
          <div class="form-block clearfix">
            <div class="input-style-1 b-50 color-3">
              <input type="text" placeholder="Destino" required="" name="query">
            </div>
          </div>
        </div>
        <input type="submit" class="c-button b-40 bg-blue-2 hv-blue-2-o" value="Buscar">
      </form>
    </div>
    <div class="sidebar-block filter">
      <h4 class="sidebar-title color-dark-2">Destinos</h4>
      <ul class="sidebar-category color-1 filter-nav-sidebar">
        <li class="active">
          <a class="cat-drop" href="#">Buscar por pa√≠s <span class="fr"><%= data.destinos.count %></span></a>
          <ul>
            <%
            if categoria == 'paquetes'
              @destinos = dato.paquetes.collect{|e| e.pais}.uniq
            else
              @destinos = []

              collection.each do |item|
                unless item.pais.nil?
                  item.pais.split(', ').each do |pais|
                    @destinos.push(pais)
                  end
                end
              end

            end
            %>
            <li class="selected"><a href="#all" data-filter="*">Todos</a></li>
            <% @destinos.uniq.sort_by{ |word| word.downcase }.each do |destino| %>
              <li><a href="<%= "##{destino.parameterize}" %>" data-filter=".<%= destino.parameterize %>"><%= destino %></a></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
