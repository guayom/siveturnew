---
layout: layout
---
<div class="inner-banner background-block" style="background-image: url(/images/inner_banner_1.jpg);">
	<img class="center-image" src="/images/inner_banner_1.jpg" alt="" style="display: none;">
	<div class="vertical-align">
		<div class="container">
			<ul class="banner-breadcrumb color-white clearfix">
				<li><a class="link-blue-2" href="/">Inicio</a> /</li>
				<li><span class="color-blue-2">Autos</span></li>
			</ul>
			<h2 class="color-white">Nuestros autos</h2>
			<h4 class="color-white">Actualmente contamos con: <span><%= data.autos.count %></span> autos</h4>
		</div>
	</div>
</div>

<div class="list-wrapper bg-grey-2">
	<div class="container">
		<div class="row">

			<%= partial "partials/sidebar", :locals => { categoria: "circuitos" } %>

			<div class="col-xs-12 col-sm-8 col-md-9">

				<div class="grid-content clearfix">
          <% data.autos.each do |auto| %>
					<div class="list-item-entry">
			        <div class="hotel-item style-3 bg-white">
			        	<div class="table-view">
				          	<div class="radius-top cell-view">
				          	 	<img src="/images/autos/<%= auto.imagen %>" alt="<%= auto.imagen %>">
				          	</div>
				          	<div class="title hotel-middle clearfix cell-view">
				          	    <h4><b><%= auto.nombre %></b></h4>
					            <p class="f-14 grid-hidden">Nunc cursus libero purus ac congue arcu cur sus ut sed vitae pulvinar. Nunc cursus libero purus ac congue arcu.</p>
				            </div>
				            <div class="title hotel-right clearfix cell-view">
				            	<div class="hotel-person color-dark-2"><span class="color-blue"><%= auto.capacidad %></span> Personas</div>
								<a class="c-button b-40 bg-blue hv-blue-o grid-hidden" href="#">view more</a>
				            </div>
			            </div>
			        </div>
					</div>
          <% end %>
				</div>

			</div>
		</div>
	</div>
</div>
